<!-- Custom CSS -->
<style>
    :root {
        --primary-color: #4CAF50; /* Green */
        --secondary-color: #2E7D32; /* Darker Green */
        --accent-color: #8BC34A; /* Light Green */
        --light-gray: #f5f5f5;
        --dark-gray: #4d4d4d;
        --medium-gray: #9e9e9e;
    }

    body {
        color: var(--dark-gray);
        background-color: var(--light-gray);
    }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-primary:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }

    .btn-outline-secondary {
        color: var(--dark-gray);
        border-color: var(--dark-gray);
    }

        .btn-outline-secondary:hover {
            background-color: var(--dark-gray);
            border-color: var(--dark-gray);
        }

    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

    /* General Styles */
    .section-title {
        position: relative;
        padding-bottom: 10px;
        font-weight: 600;
        color: var(--dark-gray);
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--primary-color);
        }

    /* Hero Section */
    .hero-section {
        padding: 2rem 0;
    }

    /* Category Cards */
    .category-card {
        padding: 1.5rem;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        transition: all 0.3s;
        position: relative;
        height: 100%;
    }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        }

    .icon-wrapper {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(76, 175, 80, 0.1);
        border-radius: 50%;
        margin: 0 auto;
        color: var(--primary-color);
    }

    /* Book Cards */
    .book-card {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        transition: all 0.3s;
    }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        }

    .book-img-wrapper {
        position: relative;
        overflow: hidden;
    }

    .book-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: var(--primary-color);
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 0.8rem;
        font-weight: 500;
    }

        .book-badge.sale {
            background-color: #F44336;
        }

        .book-badge.bestseller {
            background-color: #FFC107;
            color: var(--dark-gray);
        }

    .book-actions {
        position: absolute;
        bottom: -50px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s;
    }

    .book-card:hover .book-actions {
        bottom: 15px;
    }

    .action-btn {
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border-radius: 50%;
        box-shadow: 0 3px 5px rgba(0,0,0,0.1);
        transition: all 0.2s;
    }

        .action-btn:hover {
            background-color: var(--primary-color);
            color: white;
        }

    .book-title {
        font-weight: 500;
        margin-bottom: 5px;
        color: var(--dark-gray);
    }

    .book-author {
        color: var(--medium-gray);
        font-size: 0.85rem;
    }
