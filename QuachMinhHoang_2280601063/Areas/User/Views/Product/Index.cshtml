@model IEnumerable<QuachMinhHoang_2280601063.Models.Product>
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <!-- Header with view toggle -->
        <div class="products-header d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">Our Products</h2>
            <div class="btn-group">
                <button class="btn btn-outline-secondary active" id="grid-view-btn">
                    <i class="fas fa-th"></i> Grid
                </button>
                <button class="btn btn-outline-secondary" id="list-view-btn">
                    <i class="fas fa-list"></i> List
                </button>
            </div>
        </div>

        <!-- Grid View -->
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center" id="grid-view">
            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100 product-card">
                        <!-- Product image-->
                        <div class="product-img-wrapper">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name" />
                            }
                            else
                            {
                                <img class="card-img-top" src="/images/placeholder-product.png" alt="Placeholder" />
                            }
                            <div class="product-actions">
                                <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-sm action-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <button class="btn btn-sm action-btn add-to-cart" data-product-id="@item.Id">
                                    <i class="fas fa-cart-plus"></i>
                                </button>
                            </div>
                        </div>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder product-title">@item.Name</h5>
                                <!-- Product category-->
                                <div class="product-category mb-2">@item.Category?.Name</div>
                                <!-- Product price-->
                                <div class="product-price">
                                    @item.Price.ToString("#,##0") VNĐ
                                </div>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <button class="btn btn-outline-dark add-to-cart-btn" data-product-id="@item.Id">
                                    <i class="fas fa-cart-plus me-1"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- List View (hidden by default) -->
        <div class="list-view d-none" id="list-view">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="me-3 product-thumbnail">
                                        }
                                        else
                                        {
                                            <img src="/images/placeholder-product.png" alt="Placeholder" class="me-3 product-thumbnail">
                                        }
                                        <div>
                                            <h6 class="mb-0">@item.Name</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Category?.Name</td>
                                <td>@item.Price.ToString("#,##0") VNĐ</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="btn btn-sm btn-success add-to-cart" data-product-id="@item.Id">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --primary-color: #4CAF50;
        --secondary-color: #2E7D32;
        --accent-color: #8BC34A;
        --light-gray: #f5f5f5;
        --dark-gray: #4d4d4d;
        --medium-gray: #9e9e9e;
    }

    /* Product Card Styles */
    .product-card {
        transition: all 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        }

    .product-img-wrapper {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

        .product-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-img-wrapper:hover img {
            transform: scale(1.05);
        }

    .product-actions {
        position: absolute;
        bottom: -50px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s;
    }

    .product-card:hover .product-actions {
        bottom: 15px;
    }

    .action-btn {
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        border-radius: 50%;
        box-shadow: 0 3px 5px rgba(0,0,0,0.1);
        transition: all 0.2s;
    }

        .action-btn:hover {
            background-color: var(--primary-color);
            color: white;
        }

    .product-title {
        font-weight: 600;
        color: var(--dark-gray);
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .product-category {
        color: var(--medium-gray);
        font-size: 0.85rem;
    }

    .product-price {
        font-weight: 600;
        color: var(--primary-color);
        font-size: 1.1rem;
    }

    .add-to-cart-btn {
        transition: all 0.3s;
    }

        .add-to-cart-btn:hover {
            background-color: var(--primary-color);
            color: white;
        }

    /* List View Styles */
    .product-thumbnail {
        width: 60px;
        height: 80px;
        object-fit: cover;
        border-radius: 4px;
    }

    /* Section Title */
    .section-title {
        position: relative;
        padding-bottom: 10px;
        font-weight: 600;
        color: var(--dark-gray);
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: var(--primary-color);
        }

    /* Responsive Adjustments */
    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 1.25rem;
    }

    .card-footer {
        background-color: rgba(0,0,0,0.03);
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // View toggle functionality
            const gridViewBtn = document.getElementById('grid-view-btn');
            const listViewBtn = document.getElementById('list-view-btn');
            const gridView = document.getElementById('grid-view');
            const listView = document.getElementById('list-view');

            gridViewBtn.addEventListener('click', function () {
                gridView.classList.remove('d-none');
                listView.classList.add('d-none');
                gridViewBtn.classList.add('active');
                listViewBtn.classList.remove('active');
            });

            listViewBtn.addEventListener('click', function () {
                gridView.classList.add('d-none');
                listView.classList.remove('d-none');
                gridViewBtn.classList.remove('active');
                listViewBtn.classList.add('active');
            });

            // Add to cart functionality
            document.querySelectorAll('.add-to-cart, .add-to-cart-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const productId = this.getAttribute('data-product-id');
                    addToCart(productId, 1); // Default quantity is 1
                });
            });

            function addToCart(productId, quantity) {
                fetch('/ShoppingCart/AddToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        productId: parseInt(productId),
                        quantity: parseInt(quantity)
                    })
                })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        }
                        throw new Error('Network response was not ok.');
                    })
                    .then(data => {
                        // Update cart count in navbar
                        const cartCountElements = document.querySelectorAll('.cart-count');
                        cartCountElements.forEach(el => {
                            el.textContent = data.cartCount;
                        });

                        // Show success message
                        toastr.success('Product added to cart successfully!');
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        toastr.error('Failed to add product to cart');
                    });
            }
        });
    </script>
}




